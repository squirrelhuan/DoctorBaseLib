<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
       android:shape="rectangle">
    <solid android:color="@color/main_color"/>
    <corners android:topLeftRadius="96dp" android:topRightRadius="96dp" android:bottomLeftRadius="96dp"
             android:bottomRightRadius="96dp"/>
    <!--stroke标签: 边框-->
    <!--width 边框的宽度-->
    <!--color 边框的颜色-->
    <!--下面两个参数是 把边框变成虚线用-->
    <!--dashGap 虚线中空格的长度-->
    <!--dashWidth 虚线中实线的长度-->
    <stroke
            android:width="2px"
            android:color="@color/main_color"
            android:dashGap="0dip"
            android:dashWidth="0dip"/>

</shape>