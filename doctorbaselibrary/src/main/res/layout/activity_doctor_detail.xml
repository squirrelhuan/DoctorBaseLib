<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_background_color"
                android:gravity="center_horizontal"
                android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/iv_doctor_head"
                        android:layout_width="76dp"
                        android:layout_height="76dp"
                        android:layout_margin="12dp"
                        android:src="@mipmap/ic_header_doctor"/>

                <LinearLayout
                        android:id="@+id/ll_evaluate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/tv_doctor_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/main_color_gray_46"
                                android:textSize="18sp"/>

                        <TextView
                                android:id="@+id/tv_doctor_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:text=""
                                android:textColor="@color/main_color_gray_46_a85"
                                android:textSize="15sp"/>

                        <TextView
                                android:id="@+id/tv_doctor_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:text=""
                                android:textColor="@color/main_color_gray_46_a85"
                                android:textSize="15sp"/>


                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center_vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="9dp"
                                android:text="综合评价"
                                android:textColor="@color/main_color_gray_46_a65"
                                android:textSize="12sp"/>

                        <cn.demomaster.huan.quickdeveloplibrary.widget.RatingBar
                                android:id="@+id/ratingBar_evaluate"
                                android:layout_width="96dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:gravity="center_vertical">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="9dp"
                                android:text="交流语言"
                                android:textColor="@color/main_color_gray_46_a65"
                                android:textSize="12sp"/>

                        <TextView
                                android:id="@+id/tv_language"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="中文"
                                android:textColor="@color/main_color"
                                android:textSize="12sp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="15dp"
                    android:text="临床特色"
                    android:textColor="@color/main_color_gray_46"
                    android:textSize="14sp"/>

            <TextView
                    android:id="@+id/tv_characteristic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/panel_menu_main_bg"
                    android:padding="10dp"
                    android:paddingTop="19dp"
                    android:paddingBottom="19dp"
                    android:text="膝关节的相关疾病，包括关节炎、疼痛、畸形、韧带损伤、半月板破裂、软骨损伤、滑膜炎和关节周围骨折等，尤其是膝关节镜下微创手术和膝关节人工关节置换。"
                    android:textColor="@color/main_color_gray_46_a65"
                    android:textSize="14sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="15dp"
                    android:text="可预约时间"
                    android:textColor="@color/main_color_gray_46"
                    android:textSize="14sp"/>


            <TableLayout
                    android:id="@+id/TableLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TableRow android:gravity="center_horizontal">

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="一"
                            android:textColor="@color/main_color_gray_46_a65"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="二"
                            android:textColor="@color/main_color_gray_46_a65"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="三"
                            android:textColor="@color/main_color_gray_46_a65"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="四"
                            android:textColor="@color/main_color_gray_46_a65"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="五"
                            android:textColor="@color/main_color_gray_46_a65"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="六"
                            android:textColor="@color/main_color_gray_46_a65"/>

                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="日"
                            android:textColor="@color/main_color_gray_46_a65"/>

                </TableRow>

            </TableLayout>


            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recy_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/panel_menu_main_bg"
                    android:overScrollMode="never">

            </androidx.recyclerview.widget.RecyclerView>


            <TextView
                    android:id="@+id/tv_seleted_datetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="6dp"
                    android:paddingTop="8dp"
                    android:text=""
                    android:textColor="@color/main_color"
                    android:textSize="14sp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/tv_evaluate_count"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="患者评价（0）"
                        android:textColor="@color/main_color_gray_46"
                        android:textSize="14sp"/>

                <TextView
                        android:id="@+id/tv_all_evaluate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:drawableRight="@mipmap/ic_arrow_right_selected"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="6dp"
                        android:text="查看全部"
                        android:textColor="@color/main_color"
                        android:textSize="12sp"/>


            </LinearLayout>

            <TextView
                    android:id="@+id/tv_appointment"
                    style="@style/button_big"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:text="预约"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>