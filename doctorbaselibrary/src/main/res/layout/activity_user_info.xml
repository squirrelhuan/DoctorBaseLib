    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/register_panel"
            android:gravity="top"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_menu_expert"
                style="@style/panel_left_icon_with_right_arrow"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ic_menu_expert"
                android:layout_marginRight="0dp"
                android:textSize="14sp"
                android:contentDescription="@string/menu_expert"
                android:hint="@string/menu_expert"/>
        <TextView
                android:id="@+id/tv_menu_order"
                style="@style/panel_left_icon_with_right_arrow"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ic_menu_order"
                android:layout_marginRight="0dp"
                android:textSize="14sp"
                android:contentDescription="@string/menu_consultation"
                android:hint="@string/menu_consultation"/>
        <TextView
                android:id="@+id/tv_info"
                style="@style/panel_left_icon_with_right_arrow"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/certificatezhengjian"
                android:layout_marginRight="0dp"
                android:textSize="14sp"
                android:contentDescription="@string/menu_user_info"
                android:hint="@string/menu_user_info"/>
        <TextView
                android:id="@+id/tv_coupon"
                style="@style/panel_left_icon_with_right_arrow"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/youhuijuan2"
                android:layout_marginRight="0dp"
                android:textSize="14sp"
                android:contentDescription="@string/menu_user_info"
                android:hint="优惠劵"/>
        <TextView
                android:id="@+id/tv_share"
                style="@style/panel_left_icon_with_right_arrow"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ic_share_friend_small"
