                android:textSize="14sp"
                android:contentDescription="邀请有礼"
                android:hint="邀请有礼"/>

        <TextView
                android:id="@+id/tv_menu_feedback"
                style="@style/panel_left_icon_with_right_arrow"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ic_menu_feedback"
                android:layout_marginRight="0dp"
                android:textSize="14sp"
                android:contentDescription="@string/menu_feedback"
                android:hint="@string/menu_feedback"/>
        <TextView
                android:id="@+id/tv_help"
                style="@style/panel_left_icon_with_right_arrow"
                android:layout_height="50dp"
                android:drawableLeft="@mipmap/ic_help_small"
                android:layout_marginRight="0dp"
                android:textSize="14sp"
                android:contentDescription="帮助"
                android:hint="帮助"/>
