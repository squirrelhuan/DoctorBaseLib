<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background_color"
        tools:context=".view.activity.user.address.NewAddressActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="12dp"
                  android:layout_marginRight="12dp"
                  android:layout_marginTop="30dp"
                  android:layout_marginBottom="0dp"
                  android:orientation="vertical">
        <!--地址大类-->
        <LinearLayout
                style="@style/input_panel_big">
            <ImageView
                    style="@style/register_panel_image"
                    android:src="@mipmap/ic_position"/>
            <TextView
                    android:id="@+id/tv_address_big"
                    android:layout_width="match_parent"
                    style="@style/register_panel_edit"
                    android:contentDescription="@string/document_type"
                    android:hint="点击上传省份，城市，区县"/>
        </LinearLayout>

        <!--详细地址-->
        <LinearLayout
                style="@style/input_panel_big">
            <ImageView
                    style="@style/register_panel_image"
                    android:src="@mipmap/ic_position"/>
            <EditText
                    android:id="@+id/et_address_detail"
                    android:layout_width="match_parent"
                    style="@style/register_panel_edit"
                    android:contentDescription="@string/Full_name"
                    android:hint="请输入详细地址（详细到门牌号）"/>
        </LinearLayout>

        <TextView
                android:id="@+id/tv_new_address"
                android:layout_width="match_parent"
                android:layout_marginTop="39dp"
                style="@style/button_big"
                android:text="@string/confirm"/>
    </LinearLayout>
</LinearLayout>