<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rel_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/main_background_color">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginTop="46dp"
            android:orientation="vertical">

        <!--省份，城市，区县-->
        <LinearLayout
                style="@style/register_panel">
            <ImageView
                    style="@style/register_panel_image"
                    android:src="@mipmap/ic_position"/>
            <EditText
                    android:id="@+id/et_position_01"
                    android:layout_width="match_parent"
                    style="@style/register_panel_edit"
                    android:hint="点击选择省份，城市，区县"/>
        </LinearLayout>

        <!--详细地址-->
        <LinearLayout
                style="@style/register_panel">
            <ImageView
                    style="@style/register_panel_image"
                    android:src="@mipmap/ic_position"/>
            <EditText
                    android:id="@+id/et_position_02"
                    android:layout_width="match_parent"
                    style="@style/register_panel_edit"
                    android:hint="请输入详细地址（详细到门牌号）"/>
        </LinearLayout>



        <TextView
                android:id="@+id/tv_register"
                android:layout_width="match_parent"
                android:layout_marginTop="62dp"
                style="@style/button_login"
                android:text="确定"/>
    </LinearLayout>

</RelativeLayout>