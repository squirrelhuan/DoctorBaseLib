<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="@color/main_background_color"
        android:orientation="vertical">


    <RelativeLayout
            android:id="@+id/rl_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

        <TextView
                android:id="@+id/tv_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="2"
                android:maxLines="1"
                android:text="00"
                android:textColor="@color/main_color"
                android:textSize="60sp"
        />

        <TextView
                android:id="@+id/tv_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分钟"
                android:layout_toRightOf="@+id/tv_minute"
                android:textColor="@color/main_color_gray_46"
                android:textSize="12sp"
        />
        <TextView
                android:id="@+id/tv_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_m"
                android:maxEms="2"
                android:maxLines="1"
                android:text="00"
                android:textColor="@color/main_color"
                android:textSize="60sp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒"
                android:layout_toRightOf="@+id/tv_second"
                android:textColor="@color/main_color_gray_46"
                android:textSize="12sp"
        />

    </RelativeLayout>


    <cn.demomaster.huan.doctorbaselibrary.view.widget.textview.TimerButtonTextView
            android:id="@+id/time_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:text="开始"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/white"
    />

    <TextView
            android:id="@+id/tv_charge_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="点击“开始”启动咨询计时，并作为计费依据。"
            android:textColor="@color/main_color_gray_46"
            android:textSize="12sp"
    />

</LinearLayout>