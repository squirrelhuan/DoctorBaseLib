<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background_color"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:minHeight="325dp"
                  android:layout_margin="5dp"
                  android:orientation="vertical"
                  android:background="@mipmap/ic_coupon_detail_bg">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="150dp"
                      android:padding="12dp"
                      android:orientation="vertical"
                      android:gravity="center_vertical">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_coupon_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/white"
                        android:textSize="60sp"
                        android:text="500"/>
                <TextView
                        android:id="@+id/tv_coupon_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5.5dp"
                        android:textSize="15sp"
                        android:text="元"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/tv_coupon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:text="抵用劵"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:padding="12dp">

            <TableLayout android:layout_width="match_parent" android:layout_height="match_parent"
                         android:paddingLeft="20dp"
                         android:paddingRight="20dp"
                         android:paddingTop="12dp">
                <TableRow>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="劵类型："
                            android:textColor="@color/main_color_gray_46"
                            android:textSize="12sp"
                    />

                    <TextView
                            android:id="@+id/tv_coupon_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="抵用劵"
                            android:textColor="@color/main_color_gray_46"
                            android:textSize="12sp"
                    />
                </TableRow>
                <TableRow android:layout_marginTop="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="有效期至："
                            android:textColor="@color/main_color_gray_46"
                            android:textSize="12sp"
                    />

                    <TextView
                            android:id="@+id/tv_coupon_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/main_color_gray_46"
                            android:textSize="12sp"
                    />
                </TableRow>
                <TableRow android:layout_marginTop="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="使用平台："
                            android:textColor="@color/main_color_gray_46"
                            android:textSize="12sp"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="专家上门APP"
                            android:textColor="@color/main_color_gray_46"
                            android:textSize="12sp"
                    />
                </TableRow>
                <TableRow android:layout_marginTop="20dp"
                          android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="适用范围："
                            android:textColor="@color/main_color_gray_46"
                            android:textSize="12sp"
                    />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="仅针对在专家上门APP内使用优惠劵进行支付时使用"
                            android:textColor="@color/main_color_gray_46"
                            android:textSize="12sp"
                    />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="35dp"
            android:text="注：每张优惠劵只能使用一次，使用后自动作废"
            android:textColor="@color/main_color_gray_46"
            android:textSize="10sp"
    />

    <TextView
            android:id="@+id/tv_use_coupon"
            android:layout_width="match_parent"
            android:layout_marginTop="29dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            style="@style/button_big"
            android:text="立即使用"/>
</LinearLayout>