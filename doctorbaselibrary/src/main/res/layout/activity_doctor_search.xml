<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/main_background_color">


        <TextView android:id="@+id/tv_search"
                android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="12dp"
                  android:background="@drawable/panel_menu_main_bg"
                  android:paddingTop="9dp"
                  android:paddingBottom="9dp"
                  android:paddingLeft="12dp"
                  android:paddingRight="12dp"
                  android:drawableLeft="@mipmap/ic_search"
                  android:textSize="12sp"
                  android:drawablePadding="10dp"
                  android:textColor="#5a464646"
                  android:text="请输入拼音首字母、姓氏拼音、直接查找医生"/>
  <!--  <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    </LinearLayout>-->

    <LinearLayout
            android:id="@+id/ll_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    android:visibility="gone">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="10dp"
                android:text="历史预约"
                android:textColor="@color/main_color_gray_46"
                android:textSize="14sp"/>
    </LinearLayout>
    <cn.demomaster.huan.doctorbaselibrary.view.widget.FlowLayout
            android:id="@+id/fl_history" android:layout_width="match_parent" android:layout_height="wrap_content">

    </cn.demomaster.huan.doctorbaselibrary.view.widget.FlowLayout>

    <include
            layout="@layout/activity_specialist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>