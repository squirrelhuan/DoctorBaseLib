<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="12dp"
              android:paddingRight="12dp"
              android:padding="13dp"
              android:background="@drawable/panel_menu_main_bg"
              android:layout_marginBottom="8dp"
              android:orientation="horizontal">


    <ImageView
            android:id="@+id/iv_doctor_head"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:src="@mipmap/ic_header_doctor"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/main_color_gray_46"
                    android:textSize="16sp"/>

            <TextView
                    android:id="@+id/tv_doctor_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全科"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/main_color_gray_46_a85"
                    android:textSize="14sp"/>

            <TextView
                    android:id="@+id/tv_doctor_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主任医师"
                    android:layout_marginLeft="12dp"
                    android:textColor="@color/main_color_gray_46_a85"
                    android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
          <!--  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="临床特色："
                    android:textColor="@color/main_color_gray_46_a65"
                    android:textSize="14sp"/>-->

            <TextView
                    android:id="@+id/tv_characteristic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text=""
                    android:textColor="@color/main_color_gray_46_a65"
                    android:textSize="14sp"/>
            <!--android:background="@drawable/main_stroke_bg"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="5dp"-->


        </LinearLayout>

        <!-- 专业评价 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业评价："
                    android:textColor="@color/main_color_gray_46_a65"
                    android:textSize="14sp"/>

            <cn.demomaster.huan.quickdeveloplibrary.widget.RatingBar
                    android:layout_width="120dp"
                    android:layout_height="14dp"
                    android:id="@+id/ratingBar_Professional"/>


        </LinearLayout>

        <!-- 服务评价 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务评价："
                    android:textColor="@color/main_color_gray_46_a65"
                    android:textSize="14sp"/>

            <cn.demomaster.huan.quickdeveloplibrary.widget.RatingBar
                    android:layout_width="120dp"
                    android:layout_height="14dp"
                    android:id="@+id/ratingBar_Service"/>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>