<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="12dp"
              android:paddingRight="12dp"
              android:padding="13dp"
              android:layout_marginBottom="8dp"
              android:orientation="vertical">
    <!--android:background="@drawable/panel_menu_main_bg"-->


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
            android:id="@+id/iv_doctor_head"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@mipmap/ic_header_doctor"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="8dp">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text=""
                    android:textColor="@color/main_color_gray_46"
                    android:textSize="15sp"/>
            <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/main_color_gray_46_a65"
                    android:layout_gravity="right|center_vertical"
                    android:textSize="12sp"
            />
        </FrameLayout>

        <!-- 专业评价 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专业水平"
                    android:textColor="@color/main_color_gray_46_a65"
                    android:textSize="12sp"/>

            <cn.demomaster.huan.quickdeveloplibrary.widget.RatingBar
                    android:layout_width="100dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/ratingBar_Professional"/>


        </LinearLayout>

        <!-- 服务评价 -->
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务态度"
                    android:textColor="@color/main_color_gray_46_a65"
                    android:textSize="12sp"/>

            <cn.demomaster.huan.quickdeveloplibrary.widget.RatingBar
                    android:layout_width="100dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/ratingBar_Service"/>


        </LinearLayout>

        <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textColor="@color/main_color_gray_46"
                android:textSize="14sp"
        />
    </LinearLayout>


    </LinearLayout>
</LinearLayout>