<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background_color"
        tools:context=".view.activity.user.patient.AddAllergyActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/panel_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_margin="12dp">
        <TextView
                android:id="@+id/tv_allergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="选择添加您的过敏药物……"
                android:textColor="@color/main_color_gray_46"
                android:textSize="12sp"
        />

        <cn.demomaster.huan.quickdeveloplibrary.widget.FlowLayout
                android:id="@+id/fl_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginBottom="21dp">

        </cn.demomaster.huan.quickdeveloplibrary.widget.FlowLayout>





    </LinearLayout>

</LinearLayout>