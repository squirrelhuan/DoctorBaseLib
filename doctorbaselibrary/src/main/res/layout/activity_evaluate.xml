<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/main_background_color"
        tools:context=".view.activity.doctor.DoctorEvaluateActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:padding="12dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="综合评价"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/main_color_gray_46"
                android:textSize="14sp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="60dp"
                      android:padding="10dp"
                      android:gravity="center"
                      android:orientation="horizontal"
                      android:background="@drawable/panel_menu_main_bg">

            <cn.demomaster.huan.quickdeveloplibrary.widget.RatingBar
                    android:layout_width="250dp"
                    android:layout_height="40sp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/ratingBar_overall"/>

        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="服务态度"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/main_color_gray_46"
                android:textSize="14sp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="60dp"
                      android:padding="10dp"
                      android:gravity="center"
                      android:orientation="horizontal"
                      android:background="@drawable/panel_menu_main_bg">

            <cn.demomaster.huan.quickdeveloplibrary.widget.RatingBar
                    android:layout_width="250dp"
                    android:layout_height="40sp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/ratingBar_overall2"/>

        </LinearLayout>

        <EditText
                android:id="@+id/et_description"
                style="@style/input_panel_big"
                android:layout_height="125dp"
                android:layout_marginTop="15dp"
                android:hint="请对医生发表您宝贵的意见"
                android:textSize="14dp"
                android:gravity="top"
                android:maxLength="250"
                android:padding="5dp"/>

        <!--<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <CheckBox
                    android:id="@+id/iv_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="   匿名"
                    android:button="@drawable/checkbox_circle"
                    android:textColor="@color/main_color_gray_46"
                    android:textSize="14sp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginTop="14dp"
                    android:text="您的评价能帮助其他小伙伴"
                    android:textColor="@color/main_color_gray_46"
                    android:textSize="14sp"/>

        </LinearLayout>-->

        <Button
                android:id="@+id/btn_submit"
                style="@style/button_big"
                android:minHeight="0dp"
                android:button="@null"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:text="确认"/>

    </LinearLayout>
</LinearLayout>