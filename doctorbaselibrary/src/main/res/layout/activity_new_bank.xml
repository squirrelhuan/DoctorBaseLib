<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background_color"
        tools:context=".view.activity.user.address.NewAddressActivity">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="12dp"
                  android:layout_marginRight="12dp"
                  android:layout_marginTop="30dp"
                  android:layout_marginBottom="0dp"
                  android:orientation="vertical">
        <!--地址大类-->
        <LinearLayout
                style="@style/input_panel_big">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:text="持卡人"
                    android:textColor="#ff464646"
                    android:textSize="12sp"
            />
            <EditText
                    android:id="@+id/et_userName"
                    android:layout_width="match_parent"
                    style="@style/register_panel_edit"
                    android:contentDescription="@string/document_type"
                    android:hint="请填写持卡人姓名"/>
        </LinearLayout>

        <!--详细地址-->
        <LinearLayout
                style="@style/input_panel_big">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:text="卡号"
                    android:textColor="#ff464646"
                    android:textSize="12sp"
            />
            <EditText
                    android:id="@+id/et_card_number"
                    android:layout_width="match_parent"
                    style="@style/register_panel_edit"
                    android:contentDescription="@string/Full_name"
                    android:hint="请输入您的卡号"
                    android:inputType="number"
                    android:maxLength="26"
                    android:singleLine="true"/>
        </LinearLayout>

        <TextView
                android:id="@+id/tv_add_card"
                android:layout_width="match_parent"
                android:layout_marginTop="39dp"
                style="@style/button_big"
                android:text="@string/next"/>
    </LinearLayout>
</LinearLayout>