<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/main_background_color"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
            android:id="@+id/ll_01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">
        <RelativeLayout android:layout_width="match_parent"
                      android:layout_height="192dp"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_marginTop="30dp"
                      android:background="@drawable/panel_menu_main_bg">
            <ImageView
                    android:id="@+id/iv_card_front"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@mipmap/ic_idcard_thumb_01"
            />
            <TextView
                    android:id="@+id/tv_card_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="33dp"
                    android:text="添加身份证正面"
                    android:textColor="#ff464646"
                    android:textSize="12sp"
            />
        </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent"
                      android:layout_height="192dp"
                      android:orientation="vertical"
                      android:gravity="center"
                      android:layout_marginTop="15dp"
                      android:background="@drawable/panel_menu_main_bg">

            <ImageView
                    android:id="@+id/iv_card_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@mipmap/ic_idcard_thumb_02"
            />
            <TextView
                    android:id="@+id/tv_card_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="33dp"
                    android:text="添加身份证反面"
                    android:textColor="#ff464646"
                    android:textSize="12sp"
            />
        </RelativeLayout>


        <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_marginTop="26dp"
                style="@style/button_big"
                android:text="下一步"/>
    </LinearLayout>


    <!--检测结果-->

    <LinearLayout
            android:id="@+id/ll_02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
        <ImageView
                android:layout_width="61dp"
                android:layout_height="63dp"
                android:layout_marginTop="30dp"
                android:src="@mipmap/ic_authentication_success"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                android:text="认证成功"
                android:textColor="#ff464646"
                android:textSize="15sp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="感谢您的信任与支持！"
                android:textColor="#ff464646"
                android:textSize="12sp"
        />


        <TextView
                android:id="@+id/tv_back"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                style="@style/button_big"
                android:text="返回"/>

    </LinearLayout>


</LinearLayout>